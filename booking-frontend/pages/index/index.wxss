/**index.wxss**/
.page-scroll {
  height: 100vh;
  background-color: #f5f5f5;
}

.container {
  padding: 0 0 30rpx 0;
}

/* 轮播图样式 */
.banner-section {
  width: 100%;
  height: 360rpx;
}

.banner {
  width: 100%;
  height: 100%;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 分类样式 */
.category-section {
  margin: 20rpx;
  padding: 20rpx;
  width: 90%;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: flex-start;
}

.category-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.category-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
}

/* 服务列表样式 */
.popular-section, .new-section {
  width: 90%;
  margin: 20rpx;
  padding: 20rpx;
  background-color: #ffffff;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.service-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.service-item {
  width: 48%;
  background-color: #fff;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.service-image {
  width: 100%;
  height: 180rpx;
  display: block;
}

.service-info {
  padding: 16rpx;
}

.service-name {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.service-details {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.service-price {
  font-size: 32rpx;
  color: #ff5500;
  font-weight: bold;
}

.service-sales {
  font-size: 24rpx;
  color: #999;
}

/* 新品服务样式 */
.new-service-list {
  display: flex;
  flex-wrap: nowrap;
  overflow-x: auto;
  padding-bottom: 10rpx;
  justify-content: flex-start;
}

.new-service-item {
  width: 300rpx;
  flex-shrink: 0;
  margin-right: 20rpx;
}

.new-service-item:last-child {
  margin-right: 0;
}

.new-tag {
  display: inline-block;
  padding: 4rpx 12rpx;
  background-color: #ff3a30;
  color: white;
  font-size: 20rpx;
  border-radius: 10rpx;
}

/* 加载状态 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  color: #999;
}

/* 空状态提示 */
.empty-tip {
  padding: 40rpx 0;
  text-align: center;
  color: #999;
  font-size: 28rpx;
}

/* 底部提示 */
.footer-tip {
  text-align: center;
  padding: 30rpx 0;
  color: #999;
  font-size: 24rpx;
}

/* 新版首页适配 */
@media (min-width: 768rpx) {
  .service-item {
    width: 32%;
  }
}
