.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 订单详情样式 */
.order-detail {
  width: 100%;
}

.status-card {
  background-color: #1296db;
  border-radius: 12rpx 12rpx 0 0;
  padding: 30rpx;
  color: #fff;
  margin-bottom: 2rpx;
}

.status-header {
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  font-weight: bold;
}

.service-name {
  font-size: 30rpx;
}

.info-card {
  background-color: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
  color: #333;
  border-left: 8rpx solid #1296db;
  padding-left: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.info-label {
  color: #666;
  font-size: 28rpx;
}

.info-value {
  color: #333;
  font-size: 28rpx;
  text-align: right;
  max-width: 65%;
  word-break: break-all;
}

.price {
  color: #ff4d4f;
  font-weight: 500;
}

.remark-content {
  background-color: #f9f9f9;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
}

/* 错误样式 */
.error-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.error-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.error-text {
  font-size: 30rpx;
  color: #999;
} 