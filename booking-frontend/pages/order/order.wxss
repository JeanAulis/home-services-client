.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding: 20rpx;
  box-sizing: border-box;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  padding: 20rpx 0;
  color: #333;
}

/* 订单列表样式 */
.order-list {
  width: 100%;
}

.order-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.order-header {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-id {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 28rpx;
  color: #1296db;
  font-weight: 500;
}

.order-content {
  padding: 20rpx 0;
}

.service-name {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-amount {
  font-size: 34rpx;
  font-weight: 500;
  color: #ff4d4f;
}

.order-action {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #666;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 8rpx;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空订单样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 500rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
}

/* 未登录样式 */
.not-login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
}

.not-login-bg {
  width: 450rpx;
  height: 300rpx;
  margin-bottom: 30rpx;
}

.not-login-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-order {
  margin-top: 100rpx;
  width: 240rpx;
  height: 80rpx;
  background-color: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.login-btn {
  width: 240rpx;
  height: 80rpx;
  /* line-height: 80rpx; */
  background-color: #1296db;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 40rpx;
} 