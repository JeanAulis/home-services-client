.container {
  background-color: #f7f7f7;
  min-height: 100vh;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  width: 100%;
}

scroll-view {
  width: 100%;
  height: 100vh;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  padding: 20rpx 24rpx;
  color: #333;
  text-align: left;
  width: 100%;
  box-sizing: border-box;
}

/* 订单列表样式 */
.order-list {
  width: 100%;
  padding: 0 10rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.order-item {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 16rpx;
  padding: 30rpx 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
  width: calc(100% - 20rpx);
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  transition: all 0.2s ease;
  align-self: flex-start;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.order-item-hover {
  background-color: #f9f9f9;
  transform: scale(0.99);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
}

.order-id {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
}

.order-status {
  font-size: 28rpx;
  color: #1296db;
  font-weight: 600;
  margin-left: 10rpx;
  padding: 4rpx 10rpx;
  background-color: rgba(18, 150, 219, 0.08);
  border-radius: 6rpx;
  text-align: right;
}

.order-content {
  padding: 24rpx 0;
  width: 100%;
  box-sizing: border-box;
  text-align: left;
}

.service-name {
  font-size: 34rpx;
  color: #111;
  margin-bottom: 16rpx;
  font-weight: 600;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
}

.order-time {
  font-size: 28rpx;
  color: #666;
  text-align: left;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
  width: 100%;
  box-sizing: border-box;
}

.order-amount {
  font-size: 38rpx;
  font-weight: 700;
  color: #ff4d4f;
  text-align: left;
}

.order-action {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  padding: 8rpx 16rpx;
  background-color: #f7f7f7;
  border-radius: 8rpx;
  text-align: right;
}

.arrow-icon {
  width: 28rpx;
  height: 28rpx;
  margin-left: 10rpx;
}

/* 加载中样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 300rpx;
}

.loading {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #1296db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 空订单样式 */
.empty-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 600rpx;
  padding: 0 30rpx;
}

.empty-icon {
  width: 240rpx;
  height: 240rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 34rpx;
  color: #999;
  margin-bottom: 50rpx;
}

/* 未登录样式 */
.not-login-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 80vh;
  padding: 0 30rpx;
}

.not-login-bg {
  width: 500rpx;
  height: 350rpx;
  margin-bottom: 40rpx;
}

.not-login-text {
  font-size: 36rpx;
  color: #999;
  margin-bottom: 50rpx;
}

.go-order {
  margin-top: 100rpx;
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1296db;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 45rpx;
  font-weight: 500;
}

.login-btn {
  width: 280rpx;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #1296db;
  color: #ffffff;
  font-size: 34rpx;
  border-radius: 45rpx;
  font-weight: 500;
} 