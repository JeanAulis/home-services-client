.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.address-list {
  width: 100%;
  flex: 1;
}

.address-item {
  background-color: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.address-content {
  padding: 30rpx;
  border-bottom: 1rpx solid #f2f2f2;
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.name-phone {
  display: flex;
  align-items: center;
}

.name {
  font-size: 32rpx;
  font-weight: 500;
  margin-right: 20rpx;
  color: #333;
}

.phone {
  font-size: 28rpx;
  color: #666;
}

.default-tag {
  font-size: 24rpx;
  color: #ff6b81;
  border: 1rpx solid #ff6b81;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.address-detail {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.address-actions {
  display: flex;
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.action-item {
  margin-right: 30rpx;
  color: #666;
  font-size: 28rpx;
}

.empty-address {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  font-size: 30rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.empty-tips {
  font-size: 26rpx;
  color: #bbb;
}

.loading-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
  margin-top: 100rpx;
}

.loading {
  color: #999;
  font-size: 28rpx;
}

.add-btn-container {
  padding: 40rpx 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  box-sizing: border-box;
  background-color: #fff;
  border-top: 1rpx solid #f2f2f2;
}

.add-address-btn {
  background-color: #1296db;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  width: 100%;
} 