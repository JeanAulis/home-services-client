.container {
  padding: 20rpx;
  background-color: #f7f7f7;
  min-height: 100vh;
  width: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.form-group {
  background-color: #fff;
  border-radius: 12rpx;
  width: 95%;
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f2f2f2;
}

.form-item:last-child {
  border-bottom: none;
}

.form-label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.form-textarea {
  width: 100%;
  height: 180rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
}

.picker-view {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.picker-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.picker-text {
  font-size: 28rpx;
  color: #333;
}

.picker-placeholder {
  font-size: 28rpx;
  color: #999;
  text-align: left;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.btn-container {
  padding: 40rpx 20rpx;
  margin-top: 0;
}

.save-btn {
  background-color: #20a162;
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
  width: 100%;
}

.default-switch {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
}

.switch-label {
  font-size: 28rpx;
  color: #333;
} 