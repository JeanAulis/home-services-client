.container {
  padding: 30rpx;
  background-color: #fff;
}

.header {
  margin-bottom: 40rpx;
  width: 100%;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.desc {
  font-size: 28rpx;
  color: #999;
}

.permission-list {
  width: 100%;
}

.permission-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #eee;
}

.permission-info {
  flex: 1;
  padding-right: 20rpx;
}

.permission-name {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 10rpx;
}

.permission-desc {
  font-size: 28rpx;
  color: #666;
}

.tips {
  margin-top: 40rpx;
  font-size: 26rpx;
  color: #999;
  text-align: center;
} 